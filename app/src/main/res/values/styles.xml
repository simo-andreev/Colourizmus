<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryBase</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="HorizontalDivide">
        <!-- might be more suited to a @drawable -->
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dip</item>
        <item name="android:background">@color/colorDiv</item>
        <item name="android:elevation">@dimen/generic_elevation_small</item>
    </style>

    <style name="ChannelSeeker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>

        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ChannelSeekerLabel">
        <item name="android:fontFamily">monospace</item>
        <item name="android:textSize">@dimen/generic_text_large</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewEnd</item>
    </style>

    <style name="ProceedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">@dimen/generic_text_huge</item>
    </style>

    <style name="TabLayout" parent="TabLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="ChannelPicker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">110dp</item>
        <item name="android:descendantFocusability">blocksDescendants</item>
    </style>

    <style name="ChannelPickerLayout">
        <item name="android:paddingTop">@dimen/generic_spacing_small</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="ColourSeeker">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

