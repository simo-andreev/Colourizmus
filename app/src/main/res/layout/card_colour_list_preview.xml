<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:chain="http://schemas.android.com/tools">
    <data>
        <variable
            name="colourList"
            type="java.util.List&lt;bg.o.sim.colourizmus.model.CustomColour>"/>
            <!-- the '&lt;' thingie is a '<' in disguise, because XML escaping is just fugly... (ﾉ☉ヮ⚆)ﾉ ⌒*:･ﾟ✧ -->
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="@dimen/allahu_appbar_height"
        android:layout_margin="@dimen/spacing_medium"
        app:cardCornerRadius="8dp">

        <LinearLayout
            chain:colourList="@{colourList}"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>
</layout>
