<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.colourizmus.SeekerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryBase"
        android:orientation="vertical">

        <LinearLayout style="@style/ChannelSeeker">

            <!-- rename id -->
            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="R" />

            <SeekBar
                android:id="@+id/redSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout style="@style/ChannelSeeker">

            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="G" />

            <SeekBar
                android:id="@+id/greenSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout style="@style/ChannelSeeker">

            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="B" />

            <SeekBar
                android:id="@+id/blueSlider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            style="@style/HorizontalDivide"
            android:layout_margin="6dip" />

        <TextView
            android:id="@+id/hexadecValue"
            style="@style/ChannelSeekerLabel"
            android:layout_width="match_parent"
            android:text="#hexadec   |   rgb#"
            android:textAlignment="center"
            android:textSize="14sp" />

    </LinearLayout>

    <View
        android:id="@+id/colorBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</LinearLayout>
