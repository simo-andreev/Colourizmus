<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.colourizmus.SeekerFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        android:paddingTop="@dimen/generic_spacing_small">

        <LinearLayout style="@style/ChannelSeeker">

            <!-- rename id -->
            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="R" />

            <SeekBar
                android:id="@+id/seeker_red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout style="@style/ChannelSeeker">

            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="G" />

            <SeekBar
                android:id="@+id/seeker_green"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout style="@style/ChannelSeeker">

            <TextView
                style="@style/ChannelSeekerLabel"
                android:text="B" />

            <SeekBar
                android:id="@+id/seeker_blue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <View
            style="@style/HorizontalDivide"
            android:layout_margin="6dip" />


    </LinearLayout>

</LinearLayout>
