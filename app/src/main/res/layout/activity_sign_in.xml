<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.colourizmus.SignInActivity"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorBackgroundLight"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/generic_spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_ask_name"
            android:textAlignment="center"
            android:textColor="#090900"
            android:textSize="@dimen/generic_text_medium" />

        <EditText
            android:id="@+id/signin_input_name"
            android:layout_width="match_parent"
            android:layout_height="64dip"
            android:inputType="textPersonName"
            android:nextFocusDown="@+id/signin_radio_gender"
            android:textSize="@dimen/generic_text_medium" />

        <View style="@style/HorizontalDivide" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/prompt_ask_gender"
            android:textAlignment="center"
            android:textColor="#090900"
            android:textSize="@dimen/generic_text_medium" />

        <RadioGroup
            android:id="@+id/signin_radio_gender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/generic_spacing_medium">


            <RadioButton
                android:id="@+id/sigin_as_lady"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_lady" />

            <RadioButton
                android:id="@+id/signin_as_lord"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/title_lord" />


        </RadioGroup>

        <View style="@style/HorizontalDivide" />

    </LinearLayout>

    <Button
        android:id="@+id/signin_proceed"
        style="@style/ProceedButton"
        android:text="@string/action_proceed" />

</LinearLayout>
