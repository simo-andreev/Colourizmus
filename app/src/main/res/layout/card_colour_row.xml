<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/generic_spacing_tiny"
    android:layout_marginRight="@dimen/generic_spacing_tiny"
    android:layout_marginTop="@dimen/generic_spacing_small"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:padding="@dimen/generic_spacing_small">

        <ImageView
            android:id="@+id/cardview_colour_preview"
            android:layout_width="@dimen/cardview_colour_preview_size"
            android:layout_height="@dimen/cardview_colour_preview_size" />

        <TextView
            android:id="@+id/cardview_colour_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <CheckBox
            android:id="@+id/cardview_colour_favourite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/checkbox_favourite" />


    </LinearLayout>

</android.support.v7.widget.CardView>