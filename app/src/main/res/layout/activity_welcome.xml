<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundLight"
    android:orientation="vertical"

    android:padding="@dimen/generic_spacing_medium"
    tools:context="com.colourizmus.WelcomeActivity">

    <!-- LEAVING THIS BUTTON VISIBLE FOR SYMMETRY'S SAKE ATM -->
    <Button
        android:id="@+id/welcome_calculator_button"
        style="@style/ProceedButton"
        android:text="calculator" />

    <TextView
        android:id="@+id/welcome_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="@string/msg_welcome_generic"
        android:textAlignment="center"
        android:textSize="@dimen/generic_text_ginormous" />

    <ImageButton
        android:id="@+id/clourizmus"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_gravity="center"
        android:src="@mipmap/ic_launcher" />

    <Button
        android:id="@+id/welcome_pickers_button"
        style="@style/ProceedButton"
        android:text="@string/welcome_title_pickers" />


</LinearLayout>
